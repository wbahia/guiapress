<%- include("../../partials/header.ejs")%>  
<%- include("../../partials/navbar.ejs")%>  

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Artigos</h2>
        </div>
        <div class="card-body">
            <form action="/admin/articles/save" method="post">
                <input type="text" class="form-control" name="title" placeholder="Defina o tÃ­tulo do artigo"><br>
                <textarea name="body" id="article" cols="30" rows="10" class="form-control" placeholder="Escreva o artigo aqui!"></textarea><br>
                <label>Categoria</label>
                <select class="form-control" name="category">
                    <% categories.forEach((c) => { %>
                        <option value="<%= c.id %>"><%= c.title %></option>
                    <% }) %>

                </select><br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
        
    </div>
</div>



<%- include("../../partials/footer.ejs")%>  

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language:'pt_BR',
        selector:"#article",
        plugins:[
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>
